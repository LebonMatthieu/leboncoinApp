<div class="row">
  <div class="col-md-6">
    <a href="#">
      <div class="col-md-6">
        <%= image_tag @advert.image.url(:medium) , class: "img-responsive" %>
      </div>
    </a>
  </div>
  <div class="col-md-6">
    <h3><%= @advert.title %></h3>
    <p><%= @advert.description %></p>
    <h4><%= @advert.price %> &euro;</h4>
    <h5>Cat√©gorie : <span class="label label-info"><%= @advert.category.title %></span></h5>
    <%= link_to 'Retour', adverts_path, class: "btn btn-default" %>
    <%- if current_user %>
        <%- if current_user.id == @advert.user_id %>
            <%= link_to 'Modifier', edit_advert_path(@advert), class: "btn btn-warning"  %>
            <%= link_to 'Supprimer', advert_path(@advert), class: "btn btn-danger" ,
                        method: :delete,
                        data: { confirm: 'Etes-vous sur ?' } %>
        <% end %>
    <% end %>
  </div>
</div>